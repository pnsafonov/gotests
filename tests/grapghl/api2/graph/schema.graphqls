# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Job {
  id: Int
  name: String
}

type Task {
  id: Int!
  name: String!
}

type Query {
  todos: [Todo!]!
  jobs: [Job]
  tasks: [Task!]!
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}